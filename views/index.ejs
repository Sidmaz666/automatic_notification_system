<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add New Alarm</title>
<link rel="stylesheet" href="css/style.css" type="text/css" media="screen" charset="utf-8"/>
<script src="js/main.js" defer></script>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  
<span 
      class="
             text-3xl
             flex
             p-10
             font-semibold
             border-b-4
             mr-5 ml-5
             mb-2
             text-gray-700
             border-gray-300
             shadow-md
             "
      >
  Add New Alarm
</span>




<div
     class="
            flex
	    flex-wrap
	    items-center
            w-full
            p-5
	    space-x-3
	    space-y-3
	    overflow-hidden
            "
     >


     <% if(locals.items){
      for(let x in items){
     %>

  
  	<div class="
		bg-gray-300
		flex
		justify-between
		items-center
		space-x-2
		text-gray-800
		bg-opacity-50
		rounded-md
		shadow-lg
    	">
	
	  <span
	    class="time-display text-4xl p-2  text-gray-700 border-r-2 border-opacity-80 border-gray-500">
	    <%
	const convertFrom24To12Format = (time24) => {
  	const [sHours, minutes] = time24.match(/([0-9]{1,2}):([0-9]{2})/).slice(1);
  	const period = +sHours < 12 ? 'AM' : 'PM';
  	const hours = +sHours % 12 || 12;

 	 return `${hours}:${minutes} ${period}`;
		}
	    %>
	   <%= convertFrom24To12Format(items[x].time) %>
	  </span>

	  <div class="
	    flex
	    flex-col
	    p-1
	    relative
	    ">
	  <span class="capitalize font-semibold text-gray-700" >
	   <%= items[x].name %>
	  </span>
	  <span class="capitalize font-semibold text-gray-800">
	   <%= items[x].days %>
	  </span>
	  <span class="normalize text-gray-600 text-ellipsis">
	   <%= items[x].message %>
	  </span>
	  <button
	    data-id=<%= items[x]._id %>
	    class="
	    delete-notification
	    absolute
	    top-0
	    right-0 
	    text-center
	    text-md 
	    font-bold
	    opacity-80
	    shadow-xl
	    bg-white
	    rounded-full
	    -translate-y-3
	    translate-x-2
	    hover:opacity-100
	    hover:bg-[#F44336]
	    hover:text-white
	    transform-all
	    duration-200
	    ease-in-out
	    focus:outline-none
	    "
	    >
	<span title="Delete Notification" class="font-mono p-2">
	  x
	</span>	

	  </button>
	  </div>
	  </div>




	<% }} %>



  <button 
        id="add-btn"
        class="
               bg-gray-300
               bg-opacity-50
               p-2
               pl-5 pr-5
               shadow-md
               rounded-md
               transform-all duration-200 ease-in-out
               hover:bg-gray-100
               "
        title="Add New Item">
  <span 
        class="
               text-6xl
               text-gray-800
               text-opacity-80
               font-mono
               "
        >
    +
  </span>
  
</button>
  
</div>

<div
     id="add-modal"
     class="
            hidden
            bg-black
            bg-opacity-50
            w-screen
            h-screen
            absolute
            inset-0
            flex
            justify-center
            items-center
            "
     >
  
  <div
       class="
              bg-white
              rounded-lg
              max-w-40
              p-2
              "
       >
    
    <span class="flex justify-between items-center ">
      
      <span class="pl-2 font-semibold text-xl text-opacity-80 ">
         New Alarm   
        
      </span>

      
      <button
              id="closeModal-btn"
              class="
                     translate-x-3
                     -translate-y-4
                     rounded-full
                     hover:bg-red-600
                     hover:text-white
                     bg-white
                     text-gray-700
                     shadow-xl
                     "
              >
        <span
              class="font-bold text-3xl font-mono p-2 "
              >
         x
        </span>
      </button>
      
    </span>
    
 
    <span class="
                 mt-3
                 flex
                 pl-2
                 shadow
                 ">
      <span class="font-bold bg-black bg-opacity-80 p-2 pr-4 text-white rounded-md text-xl font-serif">
        Email
      </span>
      
      <input 
             id="email-inp"
             class="
                    focus:outline-none
                    border-2
                    border-black
                    border-opacity-80
                    rounded-md
                    border-l-0
                    rounded-l-none
                    -translate-x-2
                    pl-2
                    text-lg
                    font-bold
                    text-gray-800
                    placeholder:text-opacity-30
                    "
             type="email"
             placeholder="email01@domain.com"
             required
             autocomplete="off"
             >
      
    </span>
    
    <span class="
                 mt-3
                 flex
                 pl-2
                 shadow
                 ">
      <span class="font-bold bg-black bg-opacity-80 p-2 pr-4 text-white rounded-md text-xl font-serif">
        Name
      </span>
      
      <input 
             id="name-inp"
             class="
                    focus:outline-none
                    border-2
                    border-black
                    border-opacity-80
                    rounded-md
                    border-l-0
                    rounded-l-none
                    -translate-x-2
                    pl-2
                    text-lg
                    font-bold
                    text-gray-800
                    placeholder:text-opacity-30
                    capitalize
                    "
             type="text"
             placeholder="Jhon Dee"
             required
             autocomplete="off"
             >
      
    </span>

    <button
            id="day-btn"
            class="
                   mt-3
                   ml-2
                   w-72
                   p-2
                   rounded-md
                   bg-black
                   bg-opacity-80
                   text-white
                   font-semibold
                   transform-all duration-150 ease-in-out
                   hover:bg-opacity-70
                   text-ellipsis
                   overflow-hidden
                   capitalize
                   "
            >
      Select Day
    </button>
    
    
 <span class="
                 mt-3
                 flex
                 pl-2
                 shadow
    
                 ">
      <span class="font-bold bg-black bg-opacity-80 p-2 pr-4 text-white rounded-md text-xl font-serif">
        Time
      </span>
      
      <input 
             id="time-inp"
             class="
                    focus:outline-none
                    border-2
                    border-black
                    border-opacity-80
                    rounded-md
                    border-l-0
                    rounded-l-none
                    -translate-x-2
                    pl-2
                    text-lg
                    font-bold
                    text-gray-800
                    placeholder:text-opacity-30
                    w-56
                    "
             type="time"
             value="06:00"
             required
             autocomplete="off"
             >
      
    </span>
    
    
        <span class="
                 mt-3
                 flex
                 flex-col
                 pl-2
                 shadow
                 ">
      <span 
            class="font-bold w-28  p-1 text-center  text-white bg-black bg-opacity-80 rounded-md rounded-b-none text-xl  font-serif">
        Message
      </span>
         
          
          <textarea 
                    id="message"
                    placeholder="A Message to Remind Your Self" 
                    class="
                           p-1
                           border-2
                           border-gray-800
                           border-opacity-90
                           resize-none
                           rounded-r-md
                           rounded-bl-md
                           focus:outline-none
                           "
                    ></textarea>
    </span>
    
    
    <span class="flex justify-center w-full">
      
       <button
	    id="submit-btn"
            class="
                   p-2
                   pl-7 pr-7
                   mt-3
                   text-white
                   bg-black
                   bg-opacity-80
                   rounded-md
                   text-xl
                   hover:bg-opacity-70
                   mb-2
                   transform-all duration-200 ease-in-out
                   "
            >
      Save
    </button>
      
    </span>
   
    
  </div>
  
</div>





<div
     id="day-modal"
     class="
            hidden
            bg-black
            bg-opacity-90
            backdrop-blur-sm
            w-screen
            h-screen
            absolute
            inset-0
            flex
            justify-center
            items-center
            "
     >
  
  <div class="bg-white p-5 pb-3 rounded-md w-72">
    
    <span class="text-2xl m-3 text-gray-700 font-bold mb-4 flex justify-center ">
      Select Days
    </span>
    
  <ul class="flex flex-col w-full text-xl text-gray-800">
    
      <li class="first flex space-x-10 justify-between items-center p-2 border-b-2">
      <span>Check all</span>
   <input 
          value="All"
          class="accent-black"
          type="checkbox" 
           />
    </li>
    
    <li class="flex space-x-10 justify-between items-center p-2 border-b-2 ">
      <span>Monday</span>
   <input 
          value="monday"
          class="accent-black"
          type="checkbox" 
           />
    </li>
    
     <li class="flex space-x-10 justify-between items-center p-2 border-b-2">
      <span>Tuesday</span>
    <input 
           value="tuesday"
          class="accent-black"
          type="checkbox" 
           />
    </li>
  
      <li class="flex space-x-10 justify-between items-center p-2 border-b-2">
      <span>Wednesday</span>
        <input 
          value="wednesday"
          class="accent-black"
          type="checkbox" 
           />
    </li>
    
     <li class="flex space-x-10 justify-between items-center p-2 border-b-2 ">
      <span>Thursday</span>
        <input 
          value="thursday"
          class="accent-black"
          type="checkbox" 
           />
    </li>
    
    <li class="flex space-x-10 justify-between items-center p-2 border-b-2">
      <span>Friday</span>
        <input 
          value="friday"
          class="accent-black"
          type="checkbox" 
           />
    </li>
    
    <li class="flex space-x-10 justify-between items-center p-2 border-b-2">
      <span>Saturday</span>
        <input 
          value="saturday"
          class="accent-black"
          type="checkbox" 
           />
    </li>
    
     <li class="flex space-x-10 justify-between items-center p-2 border-b-2">
      <span>Sunday</span>
         <input 
          value="sunday"
          class="accent-black"
          type="checkbox" 
           />
    </li>
    
    </ul>
    
    
    <button
            id="save-dayBtn"
            class="
                   mt-3
                   ml-1
                   p-2
                   pr-4 pl-4
                   bg-black
                   bg-opacity-90
                   text-white
                   font-semibold
                   rounded-lg
                   hover:bg-opacity-80
                   transform-all duration-200 ease-in-out
                   "
            >
      Done
    </button>
    
  </div>
  
</div>


</body>
</html>
